{
	"app-id": "ar.net.covacha.spelloff",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "24.08",
	"sdk": "org.freedesktop.Sdk",
	"base": "org.godotengine.godot.BaseApp",
	"base-version": "4.4",
	"command": "spelloff",
	"finish-args": [
		"--share=ipc",
		"--socket=fallback-x11",
		"--socket=wayland",
		"--socket=pulseaudio",
		"--device=dri",
		"--share=network"
	],
	"modules": [
		{
			"name": "Spelloff",
			"buildsystem": "simple",
			"sources": [
				{
					"type": "archive",
					"url": "https://covacha.net.ar/~ramiro/public_git/spelloff/releases/spelloff-v4.0.tar.gz",
					"strip-components": 0,
					"sha256": "ae8071b5c227524d5de0e91f22b15d9d8f85ae94c2d4a66c075367137d0eaed8"
				},
				{
					"type": "file",
					"url": "https://covacha.net.ar/~ramiro/public_git/spelloff/releases/spelloff-v4.0.pck",
					"sha256": "d282678bf0f88f45d54365ec560fa70f21ae0ea2432e9d1d1a5f7df8261e3623",
					"dest-filename": "spelloff.pck"
				},
				{
					"type": "script",
					"dest-filename": "spelloff.sh",
					"commands": [
						"cd /app/bin",
						"/app/bin/godot-runner --main-pack /app/bin/data.pck \"$@\""
					]
				},
				{
					"type": "file",
					"path": "ar.net.covacha.spelloff.desktop"
				},
				{
					"type": "file",
					"path": "ar.net.covacha.spelloff.appdata.xml"
				},
				{
					"type": "file",
					"path": "icon-256.png"
				}
			],
			"build-commands": [
				"install -Dm755 spelloff.sh /app/bin/spelloff",
				"install -Dm644 spelloff.pck /app/bin/data.pck",
				"install -Dm644 ${FLATPAK_ID}.desktop /app/share/applications/${FLATPAK_ID}.desktop",
				"install -Dm644 ${FLATPAK_ID}.appdata.xml /app/share/metainfo/${FLATPAK_ID}.metainfo.xml",
				"install -Dm644 icon-256.png /app/share/icons/hicolor/256x256/apps/${FLATPAK_ID}.png"
			]
		}
	]
}
