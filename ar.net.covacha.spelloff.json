{
	"app-id": "ar.net.covacha.spelloff",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "24.08",
	"sdk": "org.freedesktop.Sdk",
	"base": "org.godotengine.godot.BaseApp",
	"base-version": "4.4",
	"command": "spelloff",
	"finish-args": [
		"--share=ipc",
		"--socket=x11",
		"--socket=pulseaudio",
		"--device=dri",
		"--share=network"
	],
	"modules": [
		{
			"name": "Spelloff",
			"buildsystem": "simple",
			"sources": [
				{
					"type": "git",
					"url": "ssh://git@covacha.net.ar:/home/ramiro/public_git/spelloff",
					"tag": "v2.5",
					"commit": "7bf27a1e9df0d640751f01f161bb6a793d4dc0dd"
				},
				{
					"type": "file",
					"url": "https://covacha.net.ar/~ramiro/public_git/spelloff/releases/spelloff-v2.5.pck",
					"dest-filename": "spelloff.pck",
					"sha256": "44ef67fb6d4b39400c15bbbbd8bae6407762e6c06f0ed6bbf047cb91df76a868"
				},
				{
					"type": "script",
					"dest-filename": "spelloff.sh",
					"commands": [
						"cd /app/bin",
						"/app/bin/godot-runner --main-pack /app/bin/spelloff.pck \"$@\""
					]
				}
			],
			"build-commands": [
				"install -Dm755 spelloff.sh /app/bin/spelloff",
				"install -Dm644 spelloff.pck /app/bin/spelloff.pck",
				"install -Dm644 ${FLATPAK_ID}.desktop /app/share/applications/ar.net.covacha.spelloff.desktop",
				"install -Dm644 ${FLATPAK_ID}.appdata.xml /app/share/metainfo/ar.net.covacha.spelloff.metainfo.xml",
				"install -Dm644 icon-256.png /app/share/icons/hicolor/256x256/apps/${FLATPAK_ID}.png"
			]
		}
	]
}
