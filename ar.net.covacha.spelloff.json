{
	"app-id": "ar.net.covacha.spelloff",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "24.08",
	"sdk": "org.freedesktop.Sdk",
	"base": "org.godotengine.godot.BaseApp",
	"base-version": "4.4",
	"command": "spelloff",
	"finish-args": [
		"--share=ipc",
		"--socket=fallback-x11",
		"--socket=wayland",
		"--socket=pulseaudio",
		"--device=dri",
		"--share=network"
	],
	"modules": [
		{
			"name": "Spelloff",
			"buildsystem": "simple",
			"sources": [
				{
					"type": "archive",
					"url": "https://covacha.net.ar/~ramiro/public_git/spelloff/releases/spelloff-v3.0.tar.gz",
					"strip-components": 0,
					"sha256": "70a09835934d5b05bef42cfe145687a1a1011e210e887ae4b997b444fac049a5"
				},
				{
					"type": "file",
					"url": "https://covacha.net.ar/~ramiro/public_git/spelloff/releases/spelloff-v3.0.pck",
					"sha256": "59e16e77a3d5791c706bec49bbe719c11388b4c45c2190421786c19aa935a9c0",
					"dest-filename": "spelloff.pck"
				},
				{
					"type": "script",
					"dest-filename": "spelloff.sh",
					"commands": [
						"cd /app/bin",
						"/app/bin/godot-runner --main-pack /app/bin/spelloff.pck \"$@\""
					]
				},
				{
					"type": "file",
					"path": "ar.net.covacha.spelloff.desktop"
				},
				{
					"type": "file",
					"path": "ar.net.covacha.spelloff.appdata.xml"
				},
				{
					"type": "file",
					"path": "icon-256.png"
				}
			],
			"build-commands": [
				"install -Dm755 spelloff.sh /app/bin/spelloff",
				"install -Dm644 spelloff.pck /app/bin/spelloff.pck",
				"install -Dm644 ${FLATPAK_ID}.desktop /app/share/applications/${FLATPAK_ID}.desktop",
				"install -Dm644 ${FLATPAK_ID}.appdata.xml /app/share/metainfo/${FLATPAK_ID}.metainfo.xml",
				"install -Dm644 icon-256.png /app/share/icons/hicolor/256x256/apps/${FLATPAK_ID}.png"
			]
		}
	]
}
