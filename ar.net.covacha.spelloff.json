{
	"app-id": "ar.net.covacha.spelloff",
	"runtime": "org.freedesktop.Platform",
	"runtime-version": "25.08",
	"sdk": "org.freedesktop.Sdk",
	"base": "org.godotengine.godot.BaseApp",
	"base-version": "4.6",
	"command": "spelloff",
	"finish-args": [
		"--share=ipc",
		"--socket=fallback-x11",
		"--socket=wayland",
		"--socket=pulseaudio",
		"--device=dri",
		"--share=network"
	],
	"modules": [
		{
			"name": "Spelloff",
			"buildsystem": "simple",
			"sources": [
				{
					"type": "archive",
					"url": "https://covacha.net.ar/~ramiro/public_git/spelloff/releases/spelloff-v4.1.tar.gz",
					"strip-components": 0,
					"sha256": "3c47788a582844e7fa89fa1c49993ba31b0619b25d4b90928916dd0cd982b399"
				},
				{
					"type": "file",
					"url": "https://covacha.net.ar/~ramiro/public_git/spelloff/releases/spelloff-v4.1.pck",
					"sha256": "68b8d3363f5957e3b72234399b0a4f6aed21770cefc8171d4eee90c3b258af17",
					"dest-filename": "spelloff.pck"
				},
				{
					"type": "script",
					"dest-filename": "spelloff.sh",
					"commands": [
						"cd /app/bin",
						"/app/bin/godot-runner --main-pack /app/bin/spelloff.pck \"$@\""
					]
				},
				{
					"type": "file",
					"path": "ar.net.covacha.spelloff.desktop"
				},
				{
					"type": "file",
					"path": "ar.net.covacha.spelloff.appdata.xml"
				},
				{
					"type": "file",
					"path": "icon-256.png"
				}
			],
			"build-commands": [
				"install -Dm755 spelloff.sh /app/bin/spelloff",
				"install -Dm644 spelloff.pck /app/bin/spelloff.pck",
				"install -Dm644 ${FLATPAK_ID}.desktop /app/share/applications/${FLATPAK_ID}.desktop",
				"install -Dm644 ${FLATPAK_ID}.appdata.xml /app/share/metainfo/${FLATPAK_ID}.metainfo.xml",
				"install -Dm644 icon-256.png /app/share/icons/hicolor/256x256/apps/${FLATPAK_ID}.png"
			]
		}
	]
}
