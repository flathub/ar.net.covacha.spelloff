<component type="desktop-application">
  <id>ar.net.covacha.spelloff</id>
  <launchable type="desktop-id">ar.net.covacha.spelloff.desktop</launchable>
  
  <name>Spelloff</name>
  <developer_name>Ramiro Basile and Spelloff contributors</developer_name>
  
  <project_license>GPL-3.0</project_license>
  <metadata_license>CC0-1.0</metadata_license>
  
	<categories>
	  <category>Game</category>
